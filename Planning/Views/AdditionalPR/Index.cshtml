</style>
<style type="text/css">
    /* SIDEBAR POSITION */
    .sidebarRight {
        background-color: #f1f1f1;
        height: 100vh;
        position: fixed;
        top: 0;
        right: 0;
        /*min-width: 400px;*/
        width: 360px;
        z-index: 999999;
    }

    .sidebar__content {
        padding: 8px;
    }
    /* SIDEBAR HIDDEN STATE */
    .sidebarRight[aria-hidden="true"] {
        transition: 200ms;
        transform: translateX(100%);
    }
    /* SIDEBAR VISIBLE STATE */
    .sidebarRight:not([aria-hidden]),
    .sidebarRight[aria-hidden="false"] {
        transition: 200ms;
        transform: translateX(0);
    }

    .sidebarHeader {
        -moz-appearance: none;
        background-color: #313129;
        border: medium none;
        box-shadow: none;
        color: #fff;
        cursor: pointer;
        font-size: 14px;
        font-weight: bold;
        height: 50px;
        margin: -8px;
        padding: 12px
    }

    #sideBarContent {
        margin-top: 10px;
        overflow-y: scroll;
        height: 100vh;
        padding-bottom: 100px;
    }
    /********************/
    .divCellInfo {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 5px;
        margin-bottom: 2px;
        color: #000;
        font-size: 8pt;
        font-family: verdana;
        overflow: hidden;
    }

    .divPlanDateRow {
        border-bottom: 1px solid #ddd;
        padding: 5px;
    }

    .btnDateDivClose {
        float: right;
        color: red;
        font-size: 11pt;
        margin-top: -10px;
    }

    .divPRDateList {
        max-height: 400px;
        overflow-y: scroll;
        padding: 25px;
    }

    .divDateHide {
        display: none;
    }

    #sideBarContent ion-icon {
        font-size: 17px;
        color: purple;
    }

    .spanLineTitle {
        background-color: yellow;
        border: 1px solid #ddd;
        font-weight: 600;
        padding: 5px 5px 5px 5px;
    }
</style>
<script type="text/javascript">
    document.querySelectorAll('[data-toggle-sidebar]').forEach(toggle => {
        toggle.addEventListener('click', e => {
            const sidebarID = toggle.dataset.toggleSidebar;
            const sidebarElement = sidebarID ? document.getElementById(sidebarID) : undefined;
            if (sidebarElement) {
                let sidebarState = sidebarElement.getAttribute('aria-hidden');
                sidebarElement.setAttribute('aria-hidden', sidebarState == 'true' ? false : true);
            }
        });
    });
    let myLabels = document.querySelectorAll('.lbl-toggle');

    Array.from(myLabels).forEach(label => {
        label.addEventListener('keydown', e => {
            if (e.which === 32 || e.which === 13) {
                e.preventDefault();
                label.click();
            };
        });
    });
</script>