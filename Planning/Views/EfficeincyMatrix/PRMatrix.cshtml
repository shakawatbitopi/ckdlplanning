
@{
    ViewBag.Title = "PR Wise Matrix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="@Url.Content("~/CustomContents/js/PRWiseMatrix.js")?@Common.AppSettings.Version"></script>
<div class="panel panel-headline">
    <div class="panel-heading" style="border-bottom: 1px solid #eee;padding-bottom: 10px;">
        <h3 class="panel-title" style="font-family: 'Pacifico', cursive">Company Wise Report</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4">
                <div class="row">
                    <label for="ddlPRID">PR ID</label>
                    <select id="ddlPRID" class="selectpicker" data-live-search="true"></select>
                </div>
                <div class="row" id="divLineNumber" style="margin-top: 20px">

                </div>
            </div>
            <div class="col-sm-12 col-md-8 col-lg-8">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="col-sm-12 col-md-2 col-lg-2">
                        <label>From Day</label>
                        <input id='txtStartDay' type='text' class='form-control' placeholder='From Day No..' />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2">
                        <label>To Day</label>
                        <input id='txtEndDay' type='text' class='form-control' placeholder='End Day No..' />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2">
                        <label>Efficiency</label>
                        <input id='txtEfficiency' type='text' class='form-control' placeholder='Efficiency..' />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2">
                        <label>Quantity</label>
                        <input id='txtQuantity' type='text' class='form-control' placeholder='Quantity..' />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2" style="padding-top: 25px;">
                        <a id='btnUpdateEfficiency' role='button' class='k-button k-button-icontext k-grid-edit btn-block' href='javascript:void(0)'><span class='k-icon k-i-download'></span>Update</a>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12" style="padding-top: 20px;">
                    <div id="divEfficiencyMatrix">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .panel .panel-heading {
        padding-top: 5px;
        position: relative;
        padding-bottom: 10px;
    }

    .panel.panel-headline .panel-heading .panel-title {
        margin-bottom: 0px;
    }

    .k-grid-header th.k-header {
        vertical-align: middle;
        font-size: 9pt;
        text-align: center;
    }

        .k-grid-header th.k-header > .k-link {
            text-align: center;
            font-weight: 600;
        }

    .k-grid td {
        font-size: 9pt;
    }

    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 100%;
    }
</style>