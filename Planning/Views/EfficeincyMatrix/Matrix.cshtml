
@{
    ViewBag.Title = "Matrix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="@Url.Content("~/CustomContents/js/EfficeincyMatrix.js")?@Common.AppSettings.Version"></script>
<div class="panel panel-headline">
    <div class="panel-heading">
        <h4 class="panel-title" style="width:25%;">Efficeincy Matrix</h4>
        <hr />
    </div>
    <div class="panel-body">
        <div class="row" style="margin-top: -15px;">
            <div class="col-sm-12 col-md-4 col-lg-4">
                <label for="ddlPRID">PRID</label>
                <select id="ddlPRID" class="selectpicker" data-live-search="true"></select>
            </div>
            <div class="col-sm-12 col-md-2 col-lg-2">
                <label for="txtSAM">SAM</label>
                <input type="text" id="txtSAM" class="form-control" readonly />
            </div>
            <div class="col-sm-12 col-md-2 col-lg-2">
                <label for="txtTotalWorkStation">Work Station</label>
                <input type="text" id="txtTotalWorkStation" class="form-control" readonly />
            </div>
            <div class="col-sm-12 col-md-2 col-lg-2">
                <label for="txtOrgEfficiency">Org Efficiency</label>
                <input type="text" id="txtOrgEfficiency" class="form-control" readonly />
            </div>
        </div>
        <div class="row" style="margin-top: 20px;">
            <div class="col-sm-12 col-md-4 col-lg-4">
                <div id="divPlanLineInformation">

                </div>
            </div>
            <div class="col-sm-12 col-md-8 col-lg-8">
                <div id="divPlanMatrixInformation">

                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalPRMatrix" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">PR Matrix</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Line Number</label>
                            <input type="text" id="txtLineNumber" class="form-control" readonly />
                            <input type="hidden" id="hdPRMatrixID" />
                            <input type="hidden" id="hdPRMasterID" />
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Efficiency</label>
                            <input type="text" id="txtEfficiency" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Hourly Production</label>
                            <input type="text" id="txtHourlyProduction" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Daily Production</label>
                            <input type="text" id="txtDailyProduction" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Start Day</label>
                            <input type="text" id="txtStartDay" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>End Day</label>
                            <input type="text" id="txtEndDay" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSave" type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .panel .panel-heading {
        padding-top: 5px;
        position: relative;
        padding-bottom: 10px;
    }

    .panel.panel-headline .panel-heading .panel-title {
        margin-bottom: 0px;
    }

    .k-grid-header th.k-header {
        vertical-align: middle;
        font-size: 9pt;
        text-align: center;
    }

        .k-grid-header th.k-header > .k-link {
            text-align: center;
            font-weight: 600;
        }

    .k-grid td {
        font-size: 9pt;
    }

    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 100%;
    }
    hr {
        margin-top: 0px;
        margin-bottom: 0px;
    }
    .modal-header {
        padding: 10px 15px 5px 15px;
        border-bottom: 1px solid #e5e5e5;
    }
</style>