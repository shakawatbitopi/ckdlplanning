                        <option value="BOTTOMS - SPECIAL CASE">BOTTOMS - SPECIAL CASE</option>
                        <option value="JACKETS">JACKETS</option>
                        <option value="SHIRTS/DRESS">SHIRTS/DRESS</option>
                    </select>
                </div>
                <div class="col-sm-12 col-md-2 col-lg-2">
                    <label for="txtTotalOrderQty">Selected Order Qty(PCS)</label>
                    <input type="text" id="txtTotalOrderQty" class="form-control txt" disabled="">
                </div>
                <div class="col-sm-12 col-md-2 col-lg-2">
                    <label for="ddlQuantityFactor">Quantity Factor</label>
                    <select id="ddlQuantityFactor" class="form-control">
                        <option value="1">1 PCS</option>
                        <option value="2">2 PCS</option>
                        <option value="3">3 PCS</option>
                        <option value="4">4 PCS</option>
                        <option value="5">5 PCS</option>
                    </select>
                </div>
                <div class="col-sm-12 col-md-2 col-lg-2">
                    <label for="txtOrderQty">Total Order Qty(PCS)</label>
                    <input type="text" id="txtOrderQty" class="form-control txt" disabled="">
                </div>
                <div class="col-sm-12 col-md-2 col-lg-2">
                    <label for="txtExtraPercentage">Extra (%)</label>
                    <input type="text" id="txtExtraPercentage" class="form-control numericDecimal txt">
                </div>
                <div class="col-sm-12 col-md-2 col-lg-2">
                    <label for="txtPlanProduction">Plan Production (PCS)</label>
                    <input type="text" id="txtPlanProduction" class="form-control txt" disabled="">
