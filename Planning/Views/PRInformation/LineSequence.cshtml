
@{
    ViewBag.Title = "Line Sequence";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="@Url.Content("~/CustomContents/js/LineSequence.js")?@Common.AppSettings.Version"></script>
<div class="panel panel-headline">
    <div class="panel-heading">
        <h4 class="panel-title" style="width:25%;">Line Sequence</h4>
        <hr />
    </div>
    <div class="panel-body">
        <div class="row" style="margin-top: -30px;margin-bottom: 10px;">
            <div class="col-sm-12 col-md-3 col-lg-3">
                <div class="form-group">
                    <label for="txtLineNumber">Line Number</label>
                    <input id="txtLineNumber" type="text" class="form-control txt" placeholder="Enter Line Number" />
                </div>
                <div class="form-group">
                    <button id="btnFind" class="btn btn-primary">Load Data</button>
                    <button id="btnClear" class="btn btn-info">Clear Data</button>
                </div>
            </div>
            <div class="col-sm-12 col-md-9 col-lg-9">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <input id="Kendofilter" type="text" class="form-control" placeholder="Search Here....." />
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div id="divLineSequence">

                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>
<style type="text/css">
    .panel .panel-heading {
        padding-top: 5px;
        position: relative;
        padding-bottom: 10px;
    }

    .panel.panel-headline .panel-heading .panel-title {
        margin-bottom: 0px;
    }

    .k-grid-header th.k-header {
        vertical-align: middle;
        font-size: 9pt;
        text-align: center;
    }

        .k-grid-header th.k-header > .k-link {
            text-align: center;
            font-weight: 600;
        }

    .k-grid td {
        font-size: 9pt;
    }

    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 100%;
    }
</style>