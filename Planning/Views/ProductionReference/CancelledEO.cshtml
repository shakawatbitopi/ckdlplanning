
@{
    ViewBag.Title = "Cancelled EO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="https://fonts.googleapis.com/css?family=Darker+Grotesque&display=swap" rel="stylesheet" />
<script type="text/javascript" src="@Url.Content("~/CustomContents/js/CancelledEO.js")?@Common.AppSettings.Version"></script>
<div class="panel panel-headline">
    <div class="panel-heading" style="border-bottom: 1px solid #eee;padding-bottom: 10px;">
        <h3 class="panel-title" style="font-family: 'Pacifico', cursive">Cancelled Export Order</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div id="divEOInformation">

                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div id="divEOOrderStatus">

                </div>
            </div>
        </div>
    </div>
</div>
<div id="modalExportOrderUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Export Order Update</h4>
            </div>
            <div class="modal-body">
                <div class="row" style="margin-top: -15px;">
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtPRID">PR ID</label>
                        <input type="text" id="txtPRID" class="form-control" readonly />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtEOQty">EO Qty</label>
                        <input type="text" id="txtEOQty" class="form-control" readonly />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtQuantityFactor">Quantity Factor</label>
                        <input type="text" id="txtQuantityFactor" class="form-control" readonly />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtPREOQty">PR EO Qty</label>
                        <input type="text" id="txtPREOQty" class="form-control" readonly />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtPRExcessQty">Excess Qty</label>
                        <input type="text" id="txtPRExcessQty" class="form-control" readonly />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtPRPlannedQty">Planned Qty</label>
                        <input type="text" id="txtPRPlannedQty" class="form-control" readonly />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtPRNewEOQty">New EO Qty</label>
                        <input type="text" id="txtPRNewEOQty" class="form-control backYellow" readonly />
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 form-group">
                        <label for="txtPRNewPlannedQty">New Planned Qty</label>
                        <input type="text" id="txtPRNewPlannedQty" class="form-control backYellow" readonly />
                    </div>
                </div>
                <div id="divPREOStatus">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .k-grid-header th.k-header {
        vertical-align: middle;
        font-size: 9pt;
        text-align: center;
    }

        .k-grid-header th.k-header > .k-link {
            text-align: center;
            font-weight: 600;
        }

    .k-grid td {
        font-size: 9pt;
    }

    .k-grid-header th.k-header {
        vertical-align: middle !important;
    }

    .panel .panel-heading {
        padding-top: 5px;
        padding-bottom: 0px;
        position: relative;
    }

    .panel.panel-headline .panel-heading .panel-title {
        margin-bottom: 0px;
    }

    .input-group-addon {
        padding: 0px 0px;
    }

    .bs3-has-addon {
        width: 100%;
    }

    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 100%;
    }

    .k-footer-template {
        text-align: center !important;
    }

    .backYellow {
        background-color: yellow !important;
    }

    .modal-header {
        padding: 10px 15px 5px 15px;
        border-bottom: 1px solid #e5e5e5;
    }

    .modal-footer {
        display: none;
    }
