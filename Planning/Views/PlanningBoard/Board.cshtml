<script type="text/javascript">
    $(function () {
        LoadCalender();
    });
    function LoadCalender() {
        var _thead = "";
        for (var i = 0; i <= 60; i++) {
            var now = new Date();
            now.setDate(now.getDate() + i);

            var _dateNo = parseInt(now.getDate());
            _thead += "<th>" + _dateNo + "</th>";
        }
        $("#tblMain thead").append("<tr>" + _thead + "</tr>");
    }
</script>
