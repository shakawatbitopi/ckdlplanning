
@{
    ViewBag.Title = "Monthly Projection Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="@Url.Content("~/CustomContents/js/MonthlyProjectionReport.js")?@Common.AppSettings.Version"></script>
<div class="panel panel-headline">
    <div class="panel-heading" style="border-bottom: 1px solid #eee;padding-bottom: 10px;">
        <h3 class="panel-title" style="font-family: 'Pacifico', cursive">Company Wise Report</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12 col-md-2 col-lg-2">
                <label for="ddlCompany">Company</label>
                <select id="ddlCompany" class="selectpicker" data-live-search="true"></select>
            </div>
            <div class="col-sm-12 col-md-2 col-lg-2" style="padding-top: 21px;">
                <button id="btnLoadProjectionReport" class="btn btn-primary">Load Monthly Projection Data</button>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .panel .panel-heading {
        padding-top: 5px;
        padding-bottom: 0px;
        position: relative;
    }

    .panel.panel-headline .panel-heading .panel-title {
        margin-bottom: 0px;
    }

    .k-grid-header th.k-header {
        vertical-align: middle;
        font-size: 9pt;
        text-align: center;
    }

        .k-grid-header th.k-header > .k-link {
            text-align: center;
            font-weight: 600;
        }

    .k-grid td {
        font-size: 9pt;
    }

    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 100%;
    }
</style>