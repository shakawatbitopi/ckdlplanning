
@{
    ViewBag.Title = "Buyer Color Names";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="@Url.Content("~/CustomContents/js/BuyerColor.js")?@Common.AppSettings.Version"></script>
<div class="panel panel-headline">
    <div class="panel-heading" style="border-bottom: 1px solid #ddd;">
        <h4 class="panel-title" style="font-family: 'Pacifico', cursive">Buyer Color</h4>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4">
                <div class="col-sm-12 col-md-12 col-lg-12 form-group">
                    <label for="ddlBuyerID">Buyer</label>
                    <select id="ddlBuyerID" class="selectpicker" data-live-search="true"></select>
                    <input type="hidden" id="hdBuyerColorID" />
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12 form-group">
                    <label for="txtColorCode">Select Color</label>
                    <input id="txtColorCode" type="color" name="favcolor" class="form-control" value="#ff0000" />
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12 form-group">
                    <button id="btnSave" class="btn btn-primary">Save</button>
                    <button id="btnClear" class="btn btn-info">Clear</button>
                </div>
            </div>
            <div class="col-sm-12 col-md-8 col-lg-8">               
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div id="divBuyerColor">

                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .panel .panel-heading {
        padding-top: 5px;
        position: relative;
        padding-bottom: 10px;
    }

    .panel.panel-headline .panel-heading .panel-title {
        margin-bottom: 0px;
    }

    .k-grid-header th.k-header {
        vertical-align: middle;
        font-size: 9pt;
        text-align: center;
    }

        .k-grid-header th.k-header > .k-link {
            text-align: center;
            font-weight: 600;
        }

    .k-grid td {
        font-size: 9pt;
    }

    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 100%;
    }
</style>